<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:backgroundTint="@color/cor_principal"
    app:cardCornerRadius="17dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:id="@+id/imgFotoPerfilPesquisa"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/foto_usuario" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="35dp"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/txtNomePerfilPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="Afonsinho Kleberval"
                android:textColor="@color/cor_preto"
                android:textSize="@dimen/textoMedio" />

            <TextView
                android:id="@+id/txtDescricaPerfilPesquisa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:text="Cabelelereiro que corta no seco, aqui Ã© corte raiz"
                android:textColor="@color/cor_preto"
                android:textSize="@dimen/textoPequeno" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/local_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:text="Rua Bobo Alegre,75 "
                    android:textColor="@color/cor_preto"
                    android:textSize="@dimen/textoPequeno" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="17dp"
                    android:src="@drawable/baseline_star_outline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:text="9.5"
                    android:textColor="@color/cor_preto"
                    android:textSize="@dimen/textoPequeno" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>