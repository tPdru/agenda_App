<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".PesquisaPerfTelaTrabalhadorActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutTelaTrabalhador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topBarNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="#AB1F1F" />
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgAvaliacaoPerfil"
            android:layout_width="30dp"
            android:layout_gravity="right"
            android:layout_height="30dp"
            android:src="#FFC107" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imgFotoPerfilPesquisa"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="#2c2c2c" />

        <TextView
            android:id="@+id/txtNomePerfilPesquisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="CarlÃ£o Santos"
            android:textSize="32sp" />


    </LinearLayout>

</LinearLayout>